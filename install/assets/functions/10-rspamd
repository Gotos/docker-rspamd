## Last Generated on `date`

enabled = ${ENABLE_SPAMTRAP};
action = "${SPAMTRAP_ACTION}";
score = ${SPAMTRAP_SCORE};
learn_fuzzy = ${SPAMTRAP_LEARN_FUZZY};
learn_spam = ${SPAMTRAP_LEARN_SPAM};
map = file://$LOCAL_CONFDIR/maps.d/spamtrap.map;
EOF
	fi
}

