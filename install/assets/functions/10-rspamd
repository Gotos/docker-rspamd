## Last Generated on `date`

bind_socket = "${WORKER_PROXY_LISTEN_IP}:${WORKER_PROXY_LISTEN_PORT}";
timeout = ${WORKER_PROXY_TIMEOUT};
spam_header = "${WORKER_PROXY_SPAM_HEADER}";

EOF
	fi
}

