#!/command/with-contenv bash

### Set Defaults
ENABLE_SPAMLEARN_INOTIFY=${ENABLE_SPAMLEARN_INOTIFY:-"TRUE"}
LOG_LEVEL_SPAMLEARN=${LOG_LEVEL_SPAMLEARN:-"INFO"}
LOG_SPAMLEARN_LOCATION=${LOG_SPAMLEARN_LOCATION:-"/logs/spamlearn/"}
LOG_SPAMLEARN_FILE=${LOG_SPAMLEARN_FILE:-"spamlearn.log"}
LOG_SPAMLEARN_TYPE=${LOG_SPAMLEARN_TYPE:-"FILE"}
SPAMLEARN_CONFIG_FILE=${SPAMLEARN_CONFIG_FILE:-"/etc/inotify/spamlearn.cfg"}
SPAMLEARN_DELETE_AFTER_PROCESSING=${SPAMLEARN_DELETE_AFTER_PROCESSING:-"TRUE"}
SPAMLEARN_HAM_LOCATION=${SPAMLEARN_HAM_LOCATION:-"/data/spamlearn/ham"}
SPAMLEARN_SPAM_LOCATION=${SPAMLEARN_SPAM_LOCATION:-"/data/spamlearn/spam"}
